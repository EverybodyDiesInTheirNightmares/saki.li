@media (prefers-color-scheme: dark) {
    body {
        background-color: #2f2f2f;
        color: white;
    }

    .header {
        .blog-title .logo {
            color: white;
        }
        .menu .current-menu-item-link {
            color: white;
        }
    }

    .posts {
        .post-title .post-title-link {
            color: white;
        }
        .post-meta {
            color: white;
        }
    }

    .post {
        border-color: #616161;
        code, pre {
            background-color: black;
            color: white;
        }
        .highlight {
            background-color: black;
        }
    }

    .archive .post-archive .post-item .post-title {
        color: white;
    }
}